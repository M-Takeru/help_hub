<% content_for :title, "投稿を編集" %>

<% if turbo_frame_request? %>
  <%= turbo_frame_tag dom_id(@post) do %>
    <div class="auth-card auth-card--wide" style="margin-bottom: 2rem; margin-inline: auto;">
      <h2>投稿を編集</h2>
      <%= render "form", post: @post %>
      <%= link_to "キャンセル", posts_path, class: "auth-link", data: { turbo_frame: "_top" } %>
    </div>
  <% end %>
<% else %>
  <div class="auth-page">
    <div class="auth-card auth-card--wide">
      <h2>投稿を編集</h2>
      <%= render "form", post: @post %>
      <%= link_to "戻る", posts_path, class: "auth-link" %>
    </div>
  </div>
<% end %>