<div class="auth-page">
  <div class="auth-card">
    <h1 class="auth-title">ログイン</h1>
    <p class="auth-subtitle">
      アカウントにサインインして、悩みを投稿したりコメントしたりできます。
    </p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="auth-field">
        <%= f.label :email, "メールアドレス", class: "auth-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
      </div>

      <div class="auth-field">
        <%= f.label :password, "パスワード", class: "auth-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "auth-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-field auth-field--inline">
          <label class="auth-checkbox">
            <%= f.check_box :remember_me %>
            <span>ログイン状態を保持する</span>
          </label>
        </div>
      <% end %>

      <div class="auth-actions auth-actions--center">
        <%= f.submit "ログインする", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
      <%= link_to "ホームに戻る", root_path, class: "auth-link" %>
    </div>
  </div>
</div>